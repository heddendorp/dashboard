# API basic auth (required)
BASIC_AUTH_USER=dashboard
BASIC_AUTH_PASS=change-me
# Local dev convenience only. Keep false in production.
BASIC_AUTH_DISABLED=false

# Beat81 adapter (optional)
BEAT81_API_BASE_URL=https://api.production.b81.io
BEAT81_ACCEPT_LANGUAGE=de
BEAT81_TOKEN=your-beat81-token
BEAT81_LOCATION_ID=b5d7aae0-cec0-45bd-a79f-a312635078c1
BEAT81_DATE_BEGIN_GTE=
BEAT81_EVENTS_LIMIT=10
BEAT81_EVENTS_SKIP=0
BEAT81_EVENT_TYPES_LIMIT=50

# Google Calendar adapter (optional)
# Paste compact JSON in one line. Newlines in private_key can stay escaped as \n.
GOOGLE_SERVICE_ACCOUNT_JSON=
# Backward-compatible alias (either one works):
# GOOGLE_SERVICE_ACCOUNT=
GOOGLE_CALENDAR_ID=
GOOGLE_CALENDAR_TIMEZONE=Europe/Berlin
GOOGLE_CALENDAR_MAX_RESULTS=8
